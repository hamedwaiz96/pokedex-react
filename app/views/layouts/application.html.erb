<!DOCTYPE html>
<html>
  <head>
    <title>Pokedex</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyA5Z3hKhB2kFYOcqDAlZmgZ8pDOF4VgZHU" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.POKEMON_TYPES = <%=raw Pokemon::TYPES %>
    </script>
  </head>

  <body>
    <header>
      <img src="<%= image_url('pokeball.svg') %>" alt="pokedex">
      <a class="header-button" href="/">Create Pokemon</a>
    </header>

    <%= yield %>
  </body>
</html>
